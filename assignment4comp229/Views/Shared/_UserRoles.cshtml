@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model Tuple<IEnumerable<assignment4comp229.Models.Recipe>,
                    IEnumerable<assignment4comp229.Models.Review>>

<p>
  <a asp-action="InsertPage">Create New</a><br />
  <h3>@ViewBag.Message</h3>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                User
            </th>
            <th>
                Icon
            </th>
            <th>
                Name
            </th>
            @*<th>
                Description
            </th>
            <th>
                Ingredients
            </th>*@
            <th>
                Time
            </th>
            <th>
                Creation Date
            </th>
            <th>
                Edit Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item1)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @if (item.Icon == null)
                {
                    <img src="~/images/placeholder.png" alt="Placeholder Image" class="img-thumbnail small">
                }
                else
                {
                    <img src="@Html.DisplayFor(modelItem => item.Icon)" alt="Placeholder Image" class="img-thumbnail small">
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditDate)
            </td>
            <td>
                @if (SignInManager.IsSignedIn(User) && item.UserName == @User.Identity.Name)
                {
                    <a asp-action="Edit" asp-route-id="@item.RecipeId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.RecipeId">Delete</a>
                }
            </td>
            <td>
                <a asp-action="DisplayPage" asp-route-id="@item.RecipeId">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>